<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle
  xmlns="http://soap.sforce.com/2006/04/metadata"
  fqn="navigationMenu"
>
    <apiVersion>52.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Financial Insitute Navigation Menu</masterLabel>
    <description>Custom Navigation Menu</description>
    <targets>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default">
            <property
        name="menuName"
        type="String"
        datasource="apex://NavigationLinkSetPickList"
        label="Navigation Menu Name"
        description="The name of the Navigation Menu Linkset, which can be configured in Settings > Navigation"
      />
            <property
        name="logoName"
        type="String"
        default=""
        label="Logo Name"
        description="Default Logo Name"
      />     
       <property
        name="sectionLabel"
        type="String"
        default="Menu"
        label="Section Label"
        description="Default Section Label"
      />         
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
